@model MyMovieApp.Models.Film

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Больше о фильме</h2>

<section id="sectForDetails">
    <div>
        <div class="divForOperations">
            <h4>@Html.DisplayFor(model => model.Name)</h4>
            <div class="Operations">
                <a asp-action="Edit" asp-route-id="@Model?.ID">Редактировать</a> |
                <a asp-action="Index">Назад к списку</a> |
                <a asp-action="Delete" asp-route-id="@Model?.ID">Удалить</a>
            </div>
        </div>
        
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Название
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Режиссер
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Director)
            </dd>
            <dt class="col-sm-2">
                Жанр
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Genre)
            </dd>
            <dt class="col-sm-2">
                Год выпуска
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Year)
            </dd>
            <dt class="col-sm-2">
                Актеры
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Actors)
            </dd>
            <dt class="col-sm-2">
                Описание
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            
            
        </dl>
    </div>
   

</section>


